.sidebar
  .sidebar__user-name
    .sidebar__user-name__top-items
      .sidebar__user-name__top-items__name
        = current_user.name
      .sidebar__user-name__top-items__icons
        = link_to new_group_path do
          = icon('fab', 'facebook-square')
        = link_to edit_user_path(current_user) do
          = icon('far', 'edit')
        -# = link_to "#" do
        -#   = icon('far', 'edit')
  .sidebar__groups-list
    - current_user.groups.each do |group|
      .sidebar__groups__list__group
        = link_to '#' do
          .sidebar__groups__list__group__name
            = group.name
          .sidebar__groups__list__group__message
            メッセージはまだありません。
