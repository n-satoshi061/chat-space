.sidebar
  .sidebar__user-name
    .sidebar__user-name__top-items
      .sidebar__user-name__top-items__name
        = current_user.name
      .sidebar__user-name__top-items__icons
        = link_to new_group_path do
          = icon('fa', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog')
  .sidebar__groups-list
    - current_user.groups.each do |group|
      .sidebar__groups__list__group
        = link_to group_messages_path(group) do
          .sidebar__groups__list__group__name
            = group.name
          .sidebar__groups__list__group__message
            = group.show_last_message
